# From Section
set from = "$FROM_MAIL"
set realname = "$FROM_NAME"

# SMTP Details
set smtp_url = "$SMTP_URL"
set smtp_pass = "$SMTP_PASS"
set imap_user = "$FROM_MAIL"
set imap_pass = "$IMAP_PASS"

# Mailbox
set folder = "imaps://imap.domain.com:993"
set spoolfile = "+INBOX"


# Where to put the stuff
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"

# Etc
set mail_check = 30
set move = no
set imap_keepalive = 900
set sort = threads
set editor = "nano"

# GnuPG bootstrap
# source ~/.mutt/gpg.rc
